@model BibliSharp.Models.EditEmprestismoViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Emprestimo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Emprestismo.AlunoId" />
            <input type="hidden" asp-for="Emprestismo.LivroId" />
            <input type="hidden" asp-for="Emprestismo.EmprestismoId" />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Aluno)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Aluno)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Livro)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Livro)
                </dd>
            </dl>
                <div class="form-group">
                    <label asp-for="Emprestismo.DataEntrega" class="control-label"></label>
                    <input asp-for="Emprestismo.DataEntrega" class="form-control" />
                    <span asp-validation-for="Emprestismo.DataEntrega" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
